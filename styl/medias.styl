        padding-top: 20px
    #logo
        float: none
        margin 0 auto 10px
        display block
    .contacts
        text-align: center
        float none
        a
            display: inline-block
            margin-bottom: 10px
    .pre
        margin-top: 0
    .pre_title
        margin-top: 15px
        line-height: 1.2
    h1
        margin-bottom: 30px
    .date span
        margin-bottom: 30px
    .video_wrapper_main
        position: relative
        max-width 450px
        width: 100%
        height auto
        z-index 99
        left 0
        bottom: 0
        margin-top: 40px
    .date
        margin-bottom: 10px
        span
            margin-bottom: 0
            display: inline-block
    .author_main
        max-width none
    .mail_title
        text-align: center
        margin-bottom: 20px
    #for
    #plan
    #author
    #last
        padding 60px 0
    h3.plan_subtitle
        margin-bottom: 40px
    .plan_day_descript_container
        padding: 35px
    .plan_day_first .plan_day_img
    .plan_day_second .plan_day_img
    .plan_day_third .plan_day_img
        margin: 35px 0 15px
        width: 265px
        height 300px
        background-size: contain
    #janna_about h4
        margin-top: 35px
    #janna
        top: 135px;
        left: -180px;
    .owl-nav
        left: -17px;
        width: 104%
    .partner_button
        margin-bottom: 60px
    #jannas_videos .owl-nav
        width: 106.8%;
        top: 29%;
    #jannas_texts .owl-height
        min-height 132px
    #jannas_texts .owl-nav
        top 17%
    #jannas_reveiws
        padding-bottom: 60px
    #footer
        padding 30px 0
@media screen and (max-width 767px)
    #janna_main
        display: none
    .modal-dialog
        max-width 450px
        margin 10px auto
    #for
        background-image: none
    .for_container
        max-width: 450px
        margin 0 auto 60px
    #janna
        position: static
        display block
        margin 0 auto 40px
        max-width 350px
        width: 100%
    #janna_about
        max-width 450px
        margin 0 auto
    .owl-nav
    #jannas_videos .owl-nav
    #jannas_texts .owl-nav
        position static
        width 150px
        margin 0 auto
        height auto
        overflow hidden
    #jannas_reveiws .subtitle
        margin-bottom: 40px
    #jannas_videos .owl-nav
        margin-top: 15px
    .about_list
        padding-left: 20px
    #vk_comments,
    #fb
        max-width 450px
        width 100%
        margin 0 auto
    #vk_comments
        margin-bottom: 20px
@media screen and (max-width 480px)
    #logo
        width: 180px
    .after_title
        margin-bottom: 40px
    .plan_day_descript_container
        padding 20px
