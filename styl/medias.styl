        margin-top: 30px
    #janna_main
        bottom: -152px;
        right: -119px;
        width: 400px;
        z-index 0
    .author_main
        max-width 180px
        margin 0 auto
        line-height: 1.3
    .button
        width: 100%
        max-width 290px
    .plan_day_first .plan_day_img
        height 850px
    .plan_day_second .plan_day_img
        height 620px
    .plan_day_third .plan_day_img
        height 820px
